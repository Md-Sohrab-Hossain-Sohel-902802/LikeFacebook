<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.likefacebook.ui.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_chats"
        android:name="com.example.likefacebook.ui.ChatsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_chats" />

    <fragment
        android:id="@+id/navigation_Friends"
        android:name="com.example.likefacebook.ui.FriendsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_friends" />
    <fragment
        android:id="@+id/navigation_Profile"
        android:name="com.example.likefacebook.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_Group"
        android:name="com.example.likefacebook.ui.GroupsFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_groups" />
</navigation>